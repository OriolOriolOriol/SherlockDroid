<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#168BC34A"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button"
        android:paddingTop="5dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Payload Malevolo" />

    <!--TextView non utilizzata si puÃ² implementare per far scegliere all'utente quale tipo di file leggere -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Type here the path of the file to read:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText2"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Read File"
        android:id="@+id/ReadFile"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
